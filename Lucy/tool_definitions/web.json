{
  "Name": "Web_v1-0",
  "Description": "Searches web and gets webpage content.",
  "Note": "open_url is not supported on Apple Watch or HomePod.",
  "Functions": [
    {
      "function_name": "perform_searches",
      "description": "Performs multiple searches across different platforms.",
      "parameters": {
        "type": "object",
        "properties": {
          "searches": {
            "type": "array",
            "description": "Array of search operations to perform.",
            "items": {
              "type": "object",
              "properties": {
                "search_tool": {
                  "type": "string",
                  "enum": [
                    "google_search",
                    "arxiv_search",
                    "chemrxiv_search"
                  ],
                  "description": "Type of search to perform.",
                  "enum_hints": {
                    "google_search": "Web search using Google.",
                    "arxiv_search": "Search arXiv for academic papers (preprints) in physics, mathematics, and computer science, quantitative biology/finance, statistics, electrical engineering, systems science, and economics.",
                    "chemrxiv_search": "Search ChemRxiv for academic papers (preprints) in chemistry."
                  }
                },
                "parameters": {
                  "type": "object",
                  "properties": {
                    "query": {
                      "type": "string",
                      "description": "Search query."
                    },
                    "start_page": {
                      "type": "number",
                      "description": "Starting page number (1-10)."
                    },
                    "end_page": {
                      "type": "number",
                      "description": "Ending page number (1-10, >= start_page)."
                    }
                  },
                  "required": [
                    "query",
                    "start_page",
                    "end_page"
                  ]
                }
              },
              "required": [
                "function_name",
                "parameters"
              ]
            }
          }
        },
        "required": [
          "searches"
        ]
      }
    },
    {
      "function_name": "open_url",
      "description": "Opens a URL in the browser.",
      "parameters": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "description": "URL to open."
          }
        },
        "required": [
          "url"
        ]
      }
    },
    {
      "function_name": "get_webpage_content",
      "description": "Gets raw content from a list of URLs.",
      "tip": "Add .json to Reddit URLs to get post contents.",
      "parameters": {
        "type": "object",
        "properties": {
          "urls": {
            "type": "array",
            "description": "List of URLs to get content from.",
            "items": {
              "type": "string"
            }
          },
          "get_raw_content": {
            "type": "boolean",
            "description": "Default is reader-view for articles (less tokens). Set true for full raw content."
          }
        },
        "required": [
          "urls"
        ]
      }
    },
    {
      "function_name": "get_youtube_video_transcript_full",
      "description": "Gets the full transcript of a YouTube video.",
      "parameters": {
        "type": "object",
        "properties": {
          "url": {
            "type": "string",
            "description": "YouTube video URL."
          }
        },
        "required": [
          "url"
        ]
      }
    }
  ]
}
